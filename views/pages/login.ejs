<main role="main" class="container py-3 mb-5">

  <!-- Login -->
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 m-auto">
      <div class="mb-4">
        <h3 class="text-center">
          <%= title %>
        </h3>
      </div>
      <form action="/">
        <div class="form-group">
          <input type="email" class="form-control form-control-lg" placeholder="Email Address" name="email" />
        </div>
        <div class="form-group">
          <input type="password" class="form-control form-control-lg" placeholder="Password" name="password" />
        </div>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        <div class="g-recaptcha" data-sitekey="6LdA7GMUAAAAANYVPP-K1G8PQu-yjMtYp5yE3MGG"></div>
      </form>
      <input type="submit" class="btn btn-primary btn-block mt-4" />
      <div class="mt-4">
        <a href="/">Forgot Password</a>
      </div>
    </div>
  </div>

</main>